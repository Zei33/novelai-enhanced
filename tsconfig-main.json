{
	"include": [
		"src/main/**/*.ts",
		"src/api/**/*.ts"
	],
	"compilerOptions": {
		"lib": ["ES2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "src"
	}
} 