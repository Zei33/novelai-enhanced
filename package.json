{
	"name": "novelai-enhanced",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "remix vite:build && pnpm run build:electron",
		"build:electron": "pnpm run build:electron:main && pnpm run build:electron:preload",
		"build:electron:main": "tsc src/main/main.ts --outDir dist/main --module nodenext",
		"build:electron:preload": "tsc -p tsconfig-preload.json",
		"dev": "remix vite:dev",
		"electron": "electron dist/main/main.js",
		"dev:electron": "pnpm run dev & wait-on http://localhost:5173 && pnpm run build:electron && electron dist/main/main.js",
		"start": "remix-serve ./build/server/index.js"
	},
	"dependencies": {
		"@remix-run/node": "^2.16.2",
		"@remix-run/react": "^2.16.2",
		"@remix-run/serve": "^2.16.2",
		"dotenv": "^16.4.7",
		"isbot": "^4.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^2.16.2",
		"@types/node": "^22.13.13",
		"@types/react": "^18.2.20",
		"@types/react-dom": "^18.2.7",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"autoprefixer": "^10.4.19",
		"electron": "^35.0.3",
		"eslint": "^8.38.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"postcss": "^8.4.38",
		"tailwindcss": "^3.4.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.1.6",
		"vite": "^6.0.0",
		"vite-tsconfig-paths": "^4.2.1",
		"wait-on": "^8.0.3"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"electron"
		]
	}
}
